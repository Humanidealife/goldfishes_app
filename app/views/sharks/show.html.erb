<div class="container mt-3">
  <h2><%= @shark.name %> <i class="fa-solid fa-fish-fins" style="color: #ffc000;"></i><i class="fa-solid fa-fish-fins" style="color: #ffc000;"></i><i class="fa-solid fa-fish-fins" style="color: #ffc000;"></i><i class="fa-solid fa-fish-fins" style="color: #ffc000;"></i><i class="fa-solid fa-fish-fins" style="color: #ffc000;"></i></h2>
  <br>
    <div class="container mt-3 d-flex justify-content-center">
      <% if @shark.photos.attached? %>
        <% @shark.photos.each do |photo| %>
        <%= cl_image_tag photo.key, class: "photo-30" %>
        <% end %>
      <% else %>
      <% end %>
    </div>
<br>
<br>
  <div class="d-flex justify-content-center">

    <div class="card-info-show">
      <p><i class="fa-regular fa-address-card" style="color: #7fc8f8;" alt="Bio"></i> <%= @shark.description %></p>
      <p><i class="fa-solid fa-wand-magic-sparkles" style="color: #7fc8f8;"></i> <%= @shark.skills %></p>
      <p><i class="fa-solid fa-weight-hanging" style="color: #7fc8f8;"></i> <%= @shark.weight %></p>
      <p><i class="fa-solid fa-location-dot" style="color: #7fc8f8;"></i> <%= @shark.address %></p>
    </div>

    <div class="map-show"
      data-controller="map"
      data-map-markers-value="<%= @marker.to_json %>"
      data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>

      <div class="form-container">
        <div class="large">
          <div class = "card-simple-form" >
            <p><strong><%= @shark.price_per_day %></strong>â‚¬ par jour </p>
            <%= simple_form_for(@booking) do |f| %>
              <%= f.error_notification %>
              <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
                <div class="form-inputs">
                  <%= f.input :start_date,
                              as: :string,
                              input_html: { data: { controller: "datepicker" } }%>
                  <%= f.input :ending_date,
                              as: :string,
                              input_html: { data: { controller: "datepicker" } }%>
                  <%= f.input :shark_id, input_html: {value: params[:id]}, as: :hidden %>
                </div>

              <div class="form-actions">
                <%= f.button :submit, class: "button-frozen", id: "btn-show"%>
              </div>
            <% end %>
          </div>
        </div>
    </div>
  </div>
</div>
