<div class="container mt-3">
<h1>Nos poissons à louer</h1>
<p>Faites votre choix parmi les propositions ci-dessous:</p>
<div class="card-wrap cards">

  <% @sharks.each do | shark | %>
    <%= link_to shark_path(shark), class:"text-decoration-none", style:"color: inherit" do %>
      <div class="card-product">
          <% shark.photos.each do |photo| %>
              <%= cl_image_tag photo.key %>
          <% end %>
        <div class="card-product-infos">
          <h2><%= shark.name %></h2>
          <p style=position:relative;left:10px>Bio: <%= shark.description %></p>
          <p style=position:relative;left:290px> € <%= shark.price_per_day %>/jour<p>
          </div>
      </div>
      <% end %>
    <% end %>
</div>

<div style="width: 100%; height: 400px; p-20" class="photo"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
  </div>
